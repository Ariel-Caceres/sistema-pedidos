{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "../../",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@domain/*": [
                "../../domain/src/*"
            ]
        }
    },
    "include": [
        "src",
        "../../domain/src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}